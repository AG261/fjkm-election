            .order {

                /*max-width: 1000px;*/
                width: 1200px;
                color: #717375;
                line-height: 5mm;
                border-collapse: collapse;
            }
            .order thead tr {
                background-color:#F3F2F7;
                color:#000000;
                border : none ;
            }

            .order thead tr th{
                height: 20px;
                border:solid 1px #EBE9F1;
                padding-top: 10px;
            }
            .order thead tr th.description{
                width: 350px;
                border:solid 1px #EBE9F1;
                text-align: left;
