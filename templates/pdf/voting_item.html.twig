            .order tbody tr td.description{
                padding-left: 20px;
            }

            .order tbody .last-item td{
                border-bottom: 1px solid #EBE9F1 ;
            }

            .order tbody tr td.important{
                /*background-color:#F3F2F7;*/
            }
            .order tbody tr td{
                border-right:solid 1px #EBE9F1;
                border-left:solid 1px #EBE9F1;
            }

            .order tbody tr td.quantity{
                text-align: right ;
                padding-right: 24px;
            }
            .order tbody tr td.pu{
                text-align: right ;
                padding-right: 30px;
            }
            .order tbody tr td.pht{
                text-align: right ;
                padding-right: 39px;
            }
            .order tbody tr td{
                border-collapse: collapse;
                height: 15px;
                padding-top: 15px;
                border-bottom: 1px solid #EBE9F1;
            }
            .order tfoot tr td.important{
                /*background-color:#F3F2F7;*/
                height: 15px;
                padding-top: 15px;
            }
            .order tfoot tr td.entity{
                /*text-align: center;*/
                height: 15px;
                border:solid 1px #EBE9F1;
                text-align: center;
                /*padding-right: 30px;*/
                padding-top: 15px;
            }
            .order tfoot tr td.has-border-right{
                border-right: 1px solid #EBE9F1;
            }
            .order tfoot .has-border-top{
                border-top: 1px solid #EBE9F1;
                background: red;
            }
            .order tfoot tr td.pht{
                text-align: right;
                border:solid 1px #EBE9F1;
                padding-right: 39px;
            }
            img{
                width: 20%;
            }
            h2 { margin: 0; padding: 0; }
            p { margin: 5px; color: #717375; }
            .border th {
                border: 1px solid #EBE9F1;
                color: white;
                /*background: #F3F2F7;*/
                padding: 5px;
                font-weight: normal;
                font-size: 14px;
                text-align: center;
            }
            .border td {
                border: 1px solid #CFD1D2;
                padding: 5px 10px;
                text-align: center;
            }
            .no-border {
                border-right: 1px solid #CFD1D2;
                border-left: none;
                border-top: none;
                border-bottom: none;
            }
            .wording{
                color: #717375;
                font-size: 11px;
            }
            .p-6  { width: 6%; } .p-8 { width: 8%; }
            .p-10 { width: 10%; } .p-15 { width: 15%; }
            .p-33 { width: 33%; } .p-45 { width: 45%; }
            .p-20 { width: 20%; } .p-75{ width: 75%; }
            .text-center{
                text-align: center;
            }
            .block-hr{
                width: 750px;
                height: 1px;
                background: #dee1e5;
            }
            .default-app-name strong{
                color: #23aadd;
                margin-top: 10px;
                font-size: 1.142rem;
                font-weight: bold;
                letter-spacing: -0.54px;
                margin-left: 5px;
            }
        </style>
