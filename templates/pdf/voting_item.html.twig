            .table-bordereless, .order-list{
                width: 1000px;
            }
            .mybody,.myheader,.myfooter {
                width: 1000px;

            }
            .head {
                width: 1000px;
                margin: 10px 10px ;
            }
            .head .client {
                width: 350px;
                padding-bottom: 30px;
                padding-left: 150px;
            }
            .head .seller {
                width: 350px;
                padding-bottom: 1em;
                padding-bottom: 30px;
            }
            .myfooter{
                position: absolute;
                bottom: 0;
            }
            .footer{
                width: 1000px;
            }
            .footer .client {
                width: fit-content;
            }
            .footer .page_number {
                text-align: right;
            }

            .head .detail {
