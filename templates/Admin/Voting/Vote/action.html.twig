{% extends 'base-admin.html.twig' %}

{% block title %}{{ parent() }} Vote{% endblock %}
{% block stylesheets %}{{ parent() }}
    {{ include('Admin/Element/datatable-style.html.twig') }}
    <style>

        .float-left{
            float:left;
            margin-right:5px;
        }

        .custom-checkbox {
            position: relative;
            cursor: pointer;
            display: inline-block;
        }

        .custom-checkbox input {
            display: none;
        }

        .custom-checkbox label {
            position: absolute;
            top: 0;
            left: 0;
            height: 20px;
            width: 20px;
            border: 2px solid #007bff;
            background-color: white;
        }

        .custom-checkbox input:checked + label {
            background-color: #007bff;
            border-color: #007bff;
        }


    </style>
{% endblock %}

{% block body %}
    <div class="app-content content ">
        <div class="content-overlay"></div>
            <div class="header-navbar-shadow"></div>
                <div class="content-wrapper container-xxl p-0">
                    <div class="content-header row">
                        <div class="content-header-left col-md-9 col-12 mb-2">
                            <div class="row breadcrumbs-top">
                                <div class="col-12">
                                    <div class="breadcrumb-wrapper">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="{{ path('app.admin.dashboard') }}">Home</a>
                                            </li>

                                            <li class="breadcrumb-item"><a href="{{ path('app.admin.voting.vote.index') }}">Vote</a></li>


                                            <li class="breadcrumb-item active">{{ vote.id != "" ? "Edition" : "Ajout"}}
                                            </li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Information</h4>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                <div class="row">
                                    <div class="col-md-12 col-12">

                                        <div class="col-md-3 float-left">
                                            {{ form_row(form.num) }}
                                        </div>
                                        <div class="col-md-3 float-left">
                                            {{ form_row(form.isDead) }}
                                        </div>
                                        <div class="col-md-3 float-left">
                                            {{ form_row(form.isWhite) }}
                                        </div>

                                    </div>

                                </div>
                                <div class="row">
                                    <div class="row match-height">
                                            <!-- Company Table Card -->
                                            <div class="col-md-12 col-12">
                                                <div class="card card-company-table">
                                                    <div class="card-body p-0">
                                                        <div class="table-responsive" style="max-height: 60vh; overflow-y: auto;">
                                                            <table class="table">
                                                                <thead>
                                                                    <tr>
                                                                        <th colspan="3">Candidat</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody class="mt-5">
                                                                {% for candidat in candidats %}
                                                                    <tr>
                                                                        <td colspan="2">
                                                                            <div class="d-flex align-items-center">
                                                                                <div class="avatar rounded">
                                                                                    <div class="avatar-content">
                                                                                        {% set photo = "" %}
                                                                                        {% if candidat.photo != "" %}
                                                                                            {% set photo = 'upload/profil/' ~ candidat.photo %}
                                                                                        {% else %}
                                                                                            {% set photo = 'images/illustration/no-image.png' %}
                                                                                        {% endif %}
                                                                                        <img src="{{ asset(photo ) }}" style="width: 50px" alt="{{ candidat.fullname }}" />
                                                                                    </div>
                                                                                </div>
                                                                                <div>
                                                                                    <div class="fw-bolder">{{ candidat.fullname }}</div>
                                                                                    <div class="font-small-2 text-muted">
                                                                                       <strong>Numéro à l'eglise: </strong> {{candidat.numberid}}
                                                                                    </div>
                                                                                    <div class="font-small-2 text-muted">
                                                                                       <strong>Numéro à l'éléction: </strong> {{candidat.number}}
                                                                                    </div>   
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                        <td class="text-nowrap">
                                                                            
                                                                            <div class="custom-checkbox">
                                                                                <input 
                                                                                type="checkbox" 
                                                                                id="candidat_{{ candidat.id }}" 
                                                                                name="candidat[]" 
                                                                                 
                                                                                {% if voteResults[candidat.id]  is defined %} 
                                                                                    {% if voteResults[candidat.id] == true %}checked{% endif %}
                                                                                {% endif %}
                                                                                value="{{ candidat.id }}"
                                                                                >
                                                                                <label for="candidat_{{ candidat.id }}"></label>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                {% endfor %}

                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                </div>
                                <div class="row">
                                    
                                    <div class="col-md-8">
                                        {{ form_row(form.save) }}
                                    </div>
                                    
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ include('Admin/Element/disable-edit.html.twig') }}
   
{% endblock %}