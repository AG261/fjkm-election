{% extends 'base-admin.html.twig' %}

{% block title %}{{ parent() }} Vote{% endblock %}
{% block stylesheets %}{{ parent() }}
    {{ include('Admin/Element/datatable-style.html.twig') }}
    <style>

        .float-left{
            float:left;
            margin-right:5px;
        }

        .custom-checkbox {
            position: relative;
            cursor: pointer;
            display: inline-block;
        }

        .custom-checkbox input {
            display: none;
        }

        .custom-checkbox label {
            position: absolute;
            top: 0;
            left: 0;
            height: 20px;
            width: 20px;
            border: 2px solid #007bff;
            background-color: white;
        }

        .custom-checkbox input:checked + label {
            background-color: #007bff;
            border-color: #007bff;
        }
        .display-block{
            display:block
        }
        .float-right{
            float:right;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="app-content content ">
        <div class="content-overlay"></div>
            <div class="header-navbar-shadow"></div>
                <div class="content-wrapper container-xxl p-0">
                    <div class="content-header row">
                        <div class="content-header-left col-md-9 col-12 mb-2">
                            <div class="row breadcrumbs-top">
                                <div class="col-12">
                                    <div class="breadcrumb-wrapper">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="{{ path('app.admin.dashboard') }}">Home</a>
                                            </li>

                                            <li class="breadcrumb-item"><a href="{{ path('app.admin.voting.vote.index') }}">Vote</a></li>


                                            <li class="breadcrumb-item active">{{ vote.id != "" ? "Edition" : "Ajout"}}
                                            </li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Information</h4>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                <div class="row">
                                    <div class="col-md-12 col-12">

                                        <div class="col-md-3 float-left">
                                            {{ form_row(form.num) }}
                                        </div>
                                        <div class="col-md-3 float-left">
                                            {{ form_row(form.isDead) }}
                                        </div>
                                        <div class="col-md-3 float-left">
                                            {{ form_row(form.isWhite) }}
                                        </div>

                                    </div>

                                </div>
                                <div class="row block-candidat d-none">
                                    <div class="row match-height">
                                            <!-- Company Table Card -->
                                            <div class="col-md-12 col-12">
                                                <div class="card card-company-table">
                                                    <div class="card-body p-0">
                                                        <div class="table-responsive" style="max-height: 60vh; overflow-y: auto;">
                                                            <table class="table">
                                                                <thead>
                                                                    <tr>
                                                                        <th colspan="3">Candidat</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody class="mt-5">
                                                                {% for candidat in candidats %}
                                                                    <tr>
                                                                        <td colspan="2">
                                                                            <div class="d-flex align-items-center">
                                                                                <div class="avatar rounded">
                                                                                    <div class="avatar-content">
                                                                                        {% set photo = "" %}
                                                                                        {% if candidat.photo != "" %}
                                                                                            {% set photo = 'upload/profil/' ~ candidat.photo %}
                                                                                        {% else %}
                                                                                            {% set photo = 'images/illustration/no-image.png' %}
                                                                                        {% endif %}
                                                                                        <img src="{{ asset(photo ) }}" style="width: 50px" alt="{{ candidat.fullname }}" />
                                                                                    </div>
                                                                                </div>
                                                                                <div>
                                                                                    <div class="fw-bolder">{{ candidat.fullname }}</div>
                                                                                    <div class="font-small-2 text-muted">
                                                                                       <strong>Numéro à l'eglise: </strong> {{candidat.numberid}}
                                                                                    </div>
                                                                                    <div class="font-small-2 text-muted">
                                                                                       <strong>Numéro à l'éléction: </strong> {{candidat.number}}
                                                                                    </div>   
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                        <td class="text-nowrap">
                                                                            
                                                                            <div class="custom-checkbox">
                                                                                <input 
                                                                                type="checkbox" 
                                                                                id="candidat_{{ candidat.id }}" 
                                                                                name="candidat[]" 
                                                                                 
                                                                                {% if voteResults[candidat.id]  is defined %} 
                                                                                    {% if voteResults[candidat.id] == true %}checked{% endif %}
                                                                                {% endif %}
                                                                                value="{{ candidat.id }}"
                                                                                >
                                                                                <label for="candidat_{{ candidat.id }}"></label>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                {% endfor %}

                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                </div>
                                <div class="row display-block">
                                    
                                    <div class="col-md-8 float-right">
                                        {{ form_row(form.save) }}
                                    </div>
                                    
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>
    
{% endblock %}
{% block modal %}
    {{ parent() }}
    <div class="modal fade" id="add-vote-number" aria-hidden="true">
        <div class="modal-dialog sidebar-lg">
            <div class="modal-content p-0">
                <button type="button" class="btn-close d-none" data-bs-dismiss="modal" aria-label="Close">×</button>
                <div class="modal-header mb-1">
                    <h5 class="modal-title">
                        <span class="align-middle">Entré le numéro du bulletin</span>
                    </h5>
                </div>
                <div class="modal-body flex-grow-1">
                    
                        <div class="mb-1">
                            <div class="fv-row mb-2">
                                <label for="modal-number" class="form-label">Numéro</label>
                                <input type="text" id="modal-number" placeholder="Numéro" class="form-control bg-transparent form-control" autocomplete="off" value="">
                                <div class="invalid-feedback number-error ">Entré un numéro valide</div>
                            </div>
                        </div>
                        
                        <div class="d-flex flex-wrap mb-0">
                            <button type="button" id="btn-add-number" class="form-control btn btn-primary waves-effect waves-float waves-light">Valider</button>
                        </div>
                    
                    
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade modal-danger" id="add-vote-number-error" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel120">Erreur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Le numéro de bulletin a été déjà entré!<br>Veulliez entré un numéro valide!
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-add-number-error-accept" class="btn btn-danger waves-effect waves-float waves-light" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ include('Admin/Element/disable-edit.html.twig') }}
    {{ include('Admin/Voting/Vote/Common/javascript.html.twig') }}
   
{% endblock %}