        <h1>Candidat</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Laharana</th>
                <td>{{ candidat.number }}</td>
            </tr>
            <tr>
                <th>Anarana feno</th>
                <td>{{ candidat.lastname }}</td>
