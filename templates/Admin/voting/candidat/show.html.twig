{% extends '../../../base.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}
    <h1>Candidat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidat.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ candidat.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ candidat.lastname }}</td>
            </tr>
            <tr>
                <th>Civility</th>
                <td>{{ candidat.civility }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ candidat.birthday ? candidat.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_voting_candidat_index') }}">back to list</a>

    <a href="{{ path('app_voting_candidat_edit', {'id': candidat.id}) }}">edit</a>

