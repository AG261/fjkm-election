{% extends 'base-admin.html.twig' %}

{% block title %}{{ parent() }} Utilisateurs{% endblock %}
{% block stylesheets %}{{ parent() }}
    <style>
        
        .btn-action{
            width: auto;
            height: 50px;
            float: left;
            margin: 5px;
        }

        .btn-success{
            padding-top:15px;
        }

        .error{
            color : red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="app-content content ">
        <div class="content-overlay"></div>
            <div class="header-navbar-shadow"></div>
                <div class="content-wrapper container-xxl p-0">
                    <div class="content-header row">
                        <div class="content-header-left col-md-9 col-12 mb-2">
                            <div class="row breadcrumbs-top">
                                <div class="col-12">
                                    <div class="breadcrumb-wrapper">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="{{ path('app.admin.dashboard') }}">Home</a>
                                            </li>
                                            
                                            <li class="breadcrumb-item"><a href="{{ path('app.admin.user.team.index') }}">Utilisateur</a></li>
                                            
                                           
                                            <li class="breadcrumb-item active">{{ user.id != "" ? "Edition" : "Ajout"}}
                                            </li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Message</h4>
                            </div>
                            <div class="card-body">
                                
                                <div class="row">
                                    <div class="col-md-6 col-6">
                                        
                                        {% if error == false %}
                                            <p>Voulez-vous supprimer l'utilisateur?</p>
                                        {% else %}
                                            <p class="error" >On ne peut pas supprimé cet utilisateur car il est rattaché à un vote</p>
                                        {% endif %}
                                        <form method="post" action="{{ path('app.admin.user.team.delete', {'id': user.id}) }}" onsubmit="return confirm('Confirmez-vous la suppréssion définitive?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-user' ~ user.id) }}">
                                            <a class="form-control btn btn-success btn-action" href="{{ path('app.admin.user.team.index') }}">Annuler</a>
                                            {% if error == false %}
                                                <button class="form-control btn btn-danger btn-action">Supprimer</button>
                                            {% endif %}
                                        </form>
                                        
                                    </div>
                                    
                                </div>
                                
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </div>
{% endblock %}
