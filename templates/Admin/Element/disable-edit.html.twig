<script>
    $(function() {
        
           
            {% if not is_granted('ROLE_OPERATOR') %}
                $('input[type="checkbox"], input[type="text"], select').each(function(){
                        $(this).prop('readonly', true) ;
                }) ;
                $('.btn-save').each(function(){
                        $(this).hide() ;
                }) ;
            
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                $('input[type="checkbox"], input[type="text"], select').each(function(){
                        $(this).prop('readonly', false) ;
                }) ;
                $('.btn-save').each(function(){
                        $(this).show() ;
                }) ;
            
            {% endif %}
    });
</script>