<script>
    $(function() {
        
           
            {% if not is_granted('ROLE_OPERATOR') %}
                $('input').each(function(){
                        $(this).prop('disabled', true) ;
                }) ;
                $('.btn-save').each(function(){
                        $(this).hide() ;
                }) ;
            
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                $('input').each(function(){
                        $(this).prop('disabled', false) ;
                }) ;
                $('.btn-save').each(function(){
                        $(this).show() ;
                }) ;
            
            {% endif %}
    });
</script>